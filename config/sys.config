[
  {kernel, [
    {logger_level, debug},
    {logger, [
				{handler, console, logger_std_h, #{level => emergency}},
      			{handler, info, logger_disk_log_h, #{
					level => info,
					formatter => {logger_formatter, #{}},
					config => #{
						file => "logs/console.log",
						type => wrap,
						max_no_bytes => 104857600, % 100 MB
						max_no_files => 100
					}
				}},
      			{handler, error, logger_disk_log_h, #{
					level => error,
					formatter => {logger_formatter, #{}},
					config => #{
						file => "logs/error.log",
						type => wrap,
						max_no_bytes => 104857600, % 100 MB
						max_no_files => 100
      				}
				}},
				{handler, debug, logger_disk_log_h, #{
					level => debug,
					config => #{
						file => "logs/debug.log",
						type => wrap,
						max_no_bytes => 104857600, % 100 MB
						max_no_files => 100
					}
				}}
    		]
		}
  	]}
].
