[
  {kernel, [
    {logger_level, debug},
    {logger, [
			{handler, console, logger_std_h, #{
				level => info,
				formatter => {logger_formatter, #{
					single_line => true,
					time_designator => $\s,
					template => [
						time, " ",
						"[", level, "] ",
						pid, "@",
						mfa, ":",
						line, " ",
						msg, "\n"
					]
				}}
			}},
      {handler, info, logger_disk_log_h, #{
				level => info,
				config => #{
					file => "logs/console.log",
					max_no_bytes => 1073741824, % 10 gigabytes of info logs
					max_no_files => 10
      	},
				formatter => {logger_formatter, #{
					time_designator => $\s,
					template => [
						time, " ",
						"[", level, "] ",
						pid, "@",
						mfa, ":",
						line, " ",
						msg, "\n"
					]
				}}
			}},
      {handler, error, logger_disk_log_h, #{
				level => error,
				config => #{
					file => "logs/error.log",
					max_no_bytes => 1073741824, % 3 gigabytes of error logs
					max_no_files => 3
      	},
				formatter => {logger_formatter, #{
					time_designator => $\s,
					template => [
						time, " ",
						"[", level, "] ",
						pid, "@",
						mfa, ":",
						line, " ",
						msg, "\n"
					]
				}}
			}},
			{handler, debug, logger_disk_log_h, #{
				level => debug,
				config => #{
					file => "logs/debug.log",
					max_no_bytes => 1073741824, % 5 gigabytes of debug logs
					max_no_files => 5
				},
				formatter => {logger_formatter, #{
					time_designator => $\s,
					template => [
						time, " ",
						"[", level, "] ",
						pid, "@",
						mfa, ":",
						line, " ",
						msg, "\n"
					]
				}}
			}}
    ]}
  ]}
].
